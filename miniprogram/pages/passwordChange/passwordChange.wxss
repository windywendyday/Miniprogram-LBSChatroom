.passwordChangeContainer{
    display: flex;
    flex-direction: column;
}

.passwordChangeInfoContainer{
    display: flex;
    flex-direction: column;
    margin-top: 80rpx;
}

.promptText{
    margin: 0rpx 0rpx 20rpx 60rpx;
    font-family: 'PingFang SC';
    font-style: normal;
    font-weight: 300;
    font-size: 32rpx;
    line-height: 100%;
    /* identical to box height, or 16px */
    color: #80807E;
}

.passwordChangeInput{
    display: flex;
    flex-direction: row;
    margin:0 0 40rpx 60rpx;
    height: 90rpx;
    width: 640rpx;
    background: #FFFFFF;
    border-radius: 20rpx;
}
.passwordChangeInput input{
    width: 400rpx;
    height: 60rpx;
    /*background-color: green;*/
    margin-left: 20rpx;
    margin-top: 16rpx;
}


.changeButton{
    margin-top: 100rpx;
}