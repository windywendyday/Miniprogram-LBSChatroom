/* pages/login/login.wxss */
.signupContainer{
    display: flex;
    flex-direction: column;
}
.schoolIDInputContainer{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    /*background-color: aqua;*/
    height: 400rpx;
    width: 100%;
}
.inputText{
    margin-left: 60rpx;
    font-family: 'PingFang SC';
    font-style: normal;
    font-weight: 300;
    font-size: 32rpx;
    line-height: 100%;
    /* identical to box height, or 16px */
    text-align: center;
    color: #80807E;

}

.loginInput{
    display: flex;
    flex-direction: row;
    margin-top: 40rpx;
    margin-left: 60rpx;
    height: 90rpx;
    width: 640rpx;
    background: #FFFFFF;
    border-radius: 20rpx;
}
.loginInput input{
    width: 400rpx;
    height: 60rpx;
    /*background-color: green;*/
    margin-left: 20rpx;
    margin-top: 16rpx;
}
.emailStr{
    margin-left: 50rpx;
    margin-top: 30rpx;
    font-family: 'PingFang SC';
    font-weight: 600rpx;
    font-size: 30rpx;
    line-height: 100%;
    /* identical to box height, or 20px */
    /* 深黄1 */
    color: #CC9C3D;
}

.sendCaptchaButton{
    height: 200rpx;
}

.toLoginStr{
    font-family: 'PingFang SC';
    font-style: normal;
    font-weight: 400;
    font-size: 14px;
    line-height: 100%;
    /* identical to box height, or 14px */

    text-align: center;
    text-decoration-line: underline;

    /* 深绿1 */
    color: #1A4033;
}