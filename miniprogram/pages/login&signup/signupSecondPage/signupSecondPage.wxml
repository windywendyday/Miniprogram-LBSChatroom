<!--pages/signupFirstPage/signupSecondPage.wxml-->
<view class="signupContainer">
    <!--欢迎文字-->
    <view class="welcomeContainer">
        <view class="backgroundBar"></view>
        <text class="welcomeText">Hi,欢迎来到聊天室</text>
    </view>

    <!--表单框-->
    <view class="signupInfoInputContainer">
        <text class="inputText">请输入验证码</text>
        <view class="loginInput">
            <input type="text" 
            data-type='captcha'
            id="captcha"
            bindinput="handleInput"
            class="loginInputBox"></input>
        </view>
        <text class="inputText">请输入你的密码</text>
        <view class="loginInput">
            <input type="password" 
                   data-type="password"
                   id="password"
                   bindinput="handleInput"></input>
        </view>
    </view>


    <!--按钮-->
    <view class="signupButton">
        <button class="mainButton" bindtap="addData">注册</button>
    </view>


</view>
