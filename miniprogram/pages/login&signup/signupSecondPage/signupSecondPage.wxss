    color: #80807E;

}
.loginInput{
    margin:0 0 30rpx 60rpx;
    height: 90rpx;
    width: 640rpx;
    background: #FFFFFF;
    border-radius: 20rpx;
}
.loginInput input{
    width: 600rpx;
    height: 60rpx;
