.signupContainer{
    display: flex;
    flex-direction: column;
}
.signupInfoInputContainer{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    /*background-color: aqua;*/
    height: 400rpx;
    width: 100%;
}

.inputText{
    margin: 0rpx 0rpx 20rpx 60rpx;
    font-family: 'PingFang SC';
    font-style: normal;
    font-weight: 300;
    font-size: 32rpx;
    line-height: 100%;
    /* identical to box height, or 16px */
